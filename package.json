{
  "name": "my-better-t-app-2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo -F web dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F web db:push",
    "db:studio": "turbo -F web db:studio",
    "db:generate": "turbo -F web db:generate",
    "db:migrate": "turbo -F web db:migrate",
    "db:start": "turbo -F web db:start",
    "db:watch": "turbo -F web db:watch",
    "db:stop": "turbo -F web db:stop",
    "db:down": "turbo -F web db:down",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.1.2",
    "ultracite": "5.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  },
  "packageManager": "bun@1.2.15"
}
